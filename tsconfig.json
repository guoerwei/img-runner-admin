{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "@src/*": ["./src/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  }
}
